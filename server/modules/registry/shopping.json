{
  "identity": {
    "id": "shopping",
    "name": "商品搜索",
    "description": "搜索商品（支持 Amazon Japan, Yahoo Japan, 和 Rakuten 平台），提供价格对比和购买链接",
    "keywords": ["买", "购物", "商品", "特产", "装备", "多少钱", "代购", "shopping", "buy"],
    "usageScenarios": "用户需要购买物品、查询商品信息或搜索特定商品时使用"
  },
  "layoutConfig": {
    "layoutOptions": ["horizontal-scrollable-list"],
    "defaultLayout": "horizontal-scrollable-list",
    "layoutDescriptions": {
      "horizontal-scrollable-list": "商品横向滑动展示，当前项显示完整商品信息和图片，待看项显示缩略图和价格"
    }
  },
  "styleOptions": {
    "cardStyle": ["elevated", "flat"],
    "colorScheme": ["auto", "orange", "primary"],
    "density": ["compact", "comfortable"]
  },
  "dataAdapter": "ShoppingAdapter",
  "apis": {
    "initial": "shopping/search",
    "detail": "shopping/detail"
  },
  "interactions": {
    "onItemClick": "detail",
    "onBuy": "shopping/buy"
  }
}
